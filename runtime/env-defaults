#!/bin/bash

PG_SSL=${PG_SSL:-}

PG_TRUST_LOCALNET=${PG_TRUST_LOCALNET:-$PSQL_TRUST_LOCALNET} # backward compatibility
PG_TRUST_LOCALNET=${PG_TRUST_LOCALNET:-false}

REPLICATION_MODE=${REPLICATION_MODE:-$PSQL_MODE} # backward compatibility
REPLICATION_MODE=${REPLICATION_MODE:-}
REPLICATION_USER=${REPLICATION_USER:-}
REPLICATION_PASS=${REPLICATION_PASS:-}
REPLICATION_HOST=${REPLICATION_HOST:-}
REPLICATION_PORT=${REPLICATION_PORT:-5432}
REPLICATION_SSLMODE=${REPLICATION_SSLMODE:-prefer}

DB_NAME=${DB_NAME:-}
DB_USER=${DB_USER:-}
DB_PASS=${DB_PASS:-}
DB_TEMPLATE=${DB_TEMPLATE:-template1}

DB_EXTENSION=${DB_EXTENSION:-}

TUNE_MAX_CONNECTIONS=${TUNE_MAX_CONNECTIONS:-256}
TUNE_SHARED_BUFFERS=${TUNE_SHARED_BUFFERS:-1GB}
TUNE_EFFECTIVE_CACHE_SIZE=${TUNE_EFFECTIVE_CACHE_SIZE:-3GB}
TUNE_WORK_MEM=${TUNE_WORK_MEM:-4MB}
TUNE_MAINTENANCE_WORK_MEM=${TUNE_MAINTENANCE_WORK_MEM:-256MB}
TUNE_MIN_WAL_SIZE=${TUNE_MIN_WAL_SIZE:-1GB}
TUNE_MAX_WAL_SIZE=${TUNE_MAX_WAL_SIZE:-2GB}
TUNE_CHECKPOINT_COMPLETION_TARGET=${TUNE_CHECKPOINT_COMPLETION_TARGET:-0.7}
TUNE_WAL_BUFFERS=${TUNE_WAL_BUFFERS:-16MB}
TUNE_DEFAULT_STATISTICS_TARGET=${TUNE_DEFAULT_STATISTICS_TARGET:-100}
